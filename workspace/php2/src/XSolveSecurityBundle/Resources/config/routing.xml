<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">


   <route id="getUsers" path="/user" methods="GET">
      <default key="_controller">XSolveSecurityBundle:User:getUsers</default>
   </route>

   <route id="postUser" path="/user" methods="POST">
      <default key="_controller">XSolveSecurityBundle:User:postUser</default>
   </route>

   <route id="getUser" path="/user/{id}" methods="GET">
      <default key="_controller">XSolveSecurityBundle:User:getUser</default>
   </route>

   <route id="putUser" path="/user/{id}" methods="POST">
      <default key="_controller">XSolveSecurityBundle:User:putUser</default>
   </route>

   <route id="deleteUser" path="/user/{id}" methods="DELETE">
      <default key="_controller">XSolveSecurityBundle:User:deleteUser</default>
   </route>


    <route id="rest-login" path="/rest-login">
       <default key="_controller">XSolveSecurityBundle:User:restLogin</default>
    </route>
    
</routes>
