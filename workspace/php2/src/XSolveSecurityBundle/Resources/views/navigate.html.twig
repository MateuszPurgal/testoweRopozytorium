<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Webside</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    </head>
    <body>

        <div class="container">


            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/">Webside</a>
                    </div>
                    <div>
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="/">Home</a></li>
                            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Page 1 <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="page1">Page 1-1</a></li>
                                    <li><a href="page1">Page 1-2</a></li>
                                    <li><a href="page1">Page 1-3</a></li>
                                </ul>
                            </li>
                            <li><a href="page2">Page 2</a></li>
                            <li><a href="page3">Page 3</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            {% if is_granted('ROLE_USER')==false and is_granted('ROLE_ADMIN')==false%}
                                <li><a href="/register"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                                <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_USER') %}
                                <a class="navbar-brand" href="/"><p class="text-info">Hi {{ app.user.username }}!</p></a>
                                <li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="navbar-brand" href="/admin"><p class="text-info">administrtor panel</p></a>
                                <li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="symfony-content">
                {% block content %}
                {% endblock %}
            </div>
        </div>

    </body>
</html>