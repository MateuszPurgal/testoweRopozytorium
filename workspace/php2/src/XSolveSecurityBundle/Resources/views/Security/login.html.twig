 {% extends "XSolveSecurityBundle::navigate.html.twig" %}



 {% block content %}
{% if error %}
    <div class="alert alert-danger">
  <strong>
    {{ error.message }}
    </strong>
</div>
{% endif %}

<div class="col-sm-4">
   <form role="form" action="{{ path('rest-login') }}" method="post">
      <div class="form-group">
        <label for="username"><br/>Username:</label>
        <input type="text" class="form-control" id="email" value="{{ last_username }}" name="login">
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="pwd" name="haslo">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>
 {% endblock %}





